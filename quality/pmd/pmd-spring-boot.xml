<?xml version="1.0"?>
<ruleset name="Spring Boot Custom Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0
         http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>Reglas PMD específicas para Spring Boot</description>

    <!-- Reglas básicas -->
    <rule ref="category/java/bestpractices.xml">
        <exclude name="JUnitTestContainsTooManyAsserts"/>
        <exclude name="JUnit4TestShouldUseBeforeAnnotation"/>
        <exclude name="JUnit4TestShouldUseAfterAnnotation"/>
    </rule>

    <rule ref="category/java/errorprone.xml">
        <exclude name="DataflowAnomalyAnalysis"/>
        <exclude name="AvoidFieldNameMatchingMethodName"/>
    </rule>

    <rule ref="category/java/performance.xml">
        <exclude name="AvoidInstantiatingObjectsInLoops"/>
    </rule>

    <!-- Spring Boot específicas -->
    <rule name="AvoidPrintStackTrace"
          language="java"
          message="Avoid printStackTrace(); use logging instead"
          class="net.sourceforge.pmd.lang.rule.XPathRule">
        <description>Use logging framework instead of printStackTrace()</description>
        <priority>2</priority>
        <properties>
            <property name="xpath">
                <value>//MethodCall/PrimaryExpression/PrimaryPrefix/Name[@Image='printStackTrace']</value>
            </property>
        </properties>
    </rule>

    <!-- Configuración para DTOs -->
    <rule ref="category/java/bestpractices.xml/AccessorMethodGeneration">
        <properties>
            <property name="violationSuppressXPath" value="//ClassDeclaration[matches(@SimpleName, '.*DTO$|.*Entity$')]"/>
        </properties>
    </rule>
</ruleset>